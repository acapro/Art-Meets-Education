%section.exhibit
  %aside
    .text
      %h1= t('nav.exhibition')
      %nav
        %ul
          - @exhibits.each do |exhibit|
            = exhibit_sub_link exhibit.location, exhibit, @exhibit

  %article
    .text
      = markdown(@exhibit.content)
    - if @exhibit.info_image
      = image_tag attachment_url(@exhibit, :info_image, format: "jpg")
