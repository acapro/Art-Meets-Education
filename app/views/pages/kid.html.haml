    %h1= @kid.name
    - if @kid.content
      %p= markdown(@kid.content)
    .prev_next
      = prev_kid(@kid)
      = link_to 'schlie√üen', page_project_path(@kid.project), class: 'close'
      = next_kid(@kid)
  %article
