%section.team
  %aside
    %h1= t('nav.about')
    = render 'components/about_nav'
  %article
    .team
      - @team_members.each do |team_member|
        .member
          .profile= image_tag attachment_url(team_member, :profile_image, :fit, 300, 300, format: "jpg")
          .info
            .text
              = team_member.name
              %br
              = team_member.origin
              - if team_member.content
                = markdown(team_member.content)
