%section.project
  %aside
    .text
      %h1= t('nav.projects')
      %nav
        %ul
          - project_by_year(@projects).each do |year, projects|
            %li= year.strftime("%Y")
            %ul.sub
              - projects.each do |proj|
                = project_sub_link "#{proj.city} - #{proj.slum}", proj, project
  %article
    = render 'sections/kids', project: project
    .text
      - if project.content
        = markdown(project.content)
